<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Imagen</th>
            <th scope="col">Id imagen</th>
            <th scope="col">Nombre</th>
            <th scope="col">Ruta</th>
            <th scope="col">X</th>
            <th scope="col">Y</th>
            <th scope="col">Piso</th>
        </tr>
    </thead>
    @foreach (var item in Model.list)
    {
        <tr>
            <td><img src="https://minimahe.github.io/MTX360/fotos/@item.ruta" class="img-fluid img-thumbnail" /></td>
            <td>@item.id</td>
            <td>@item.nombre</td>
            <td>@item.ruta</td>
            <td>@item.x</td>
            <td>@item.y</td>
            <td>@item.piso</td>
            <td>@Html.ActionLink("Editar", "EdImagen", new { id = item.id, nombre = item.nombre, ruta = item.ruta, x=item.x, y=item.y, piso=item.piso}, new { @class = "btn btn-primary" })</td>
            <td>@Html.ActionLink("Eliminar", "ElImagen", new { id = item.id }, new { @class = "btn btn-danger" })</td>
        </tr>
    }
</table>

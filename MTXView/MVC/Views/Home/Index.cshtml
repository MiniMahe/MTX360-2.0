@{
    Layout = "_2DviewLY";
}
<div class="container">
    <h1 class="text-center mb-4">Bienvenido a la parte de administrador</h1>
    <div class="row justify-content-center">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Administración de Imágenes</h5>
                    <p class="card-text">Gestiona todas las imágenes del sistema. Puedes añadir, eliminar o modificar las imágenes existentes.</p>
                    <div> @Html.ActionLink("Ver", "Imagenes", new { }, new { @class = "btn btn-success" })</div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Administración de Flechas</h5>
                    <p class="card-text">Gestiona todas las flechas de navegación del sistema. Puedes añadir, eliminar o modificar las flechas existentes.</p>
                    <div> @Html.ActionLink("Ver", "Flechas", new { }, new { @class = "btn btn-success" })</div>
                </div>
            </div>
        </div>
    </div>
</div>